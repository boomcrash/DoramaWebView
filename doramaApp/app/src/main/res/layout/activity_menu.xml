<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">
    <GridLayout android:layout_gravity="center" android:orientation="horizontal" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp">


        <LinearLayout
            android:id="@+id/menu_icon"
            android:layout_width="59dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42dp"
            android:orientation="vertical"
            android:text="COMENTARIOS"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:backgroundTint="#0067a9">

            <ImageView
                android:id="@+id/img_menu"
                android:layout_width="51dp"
                android:layout_height="39dp"
                android:src="@drawable/menu_icon" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/escuchamos_icon"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:orientation="vertical"
            android:text="COMENTARIOS"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:backgroundTint="#0067a9">

            <ImageView
                android:id="@+id/img_escucha"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingLeft="3dp"
                android:src="@drawable/escuchamos_icon" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/calendario_icon"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="83dp"
            android:orientation="vertical"
            android:text="COMENTARIOS"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:backgroundTint="#0067a9">

            <ImageView
                android:id="@+id/img_calendar"
                android:layout_width="58dp"
                android:layout_height="40dp"
                android:src="@drawable/calendario_icon" />
        </LinearLayout>
    </GridLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/Tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:tabIndicatorColor="@color/black">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/noticias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DRAMAS" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/escuchar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ANIME" />

        <!--<com.google.android.material.tabs.TabItem
            android:id="@+id/oportunidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/oportunidades" />-->

        <com.google.android.material.tabs.TabItem
            android:id="@+id/agenda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PELICULAS" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/contenedor"
        android:layout_width="419dp"
        android:layout_height="642dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Tablayout">

    </androidx.viewpager.widget.ViewPager>
</androidx.constraintlayout.widget.ConstraintLayout>